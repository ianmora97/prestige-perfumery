<div id="sidebar" class="bg-dark">
    <div class="d-flex justify-content-center align-items-center mb-2 bg-primary" id="logo">
        <div style="height:45px;" class="align-items-center d-flex">
            <i class="fa-solid fa-truck-ramp-box text-white"></i>
        </div>
    </div>
    <div class="d-flex flex-column mt-2 align-items-center p-2" style="height: calc(100vh - 55px); overflow-y:auto;">
        <a type="button" class="btn btn-dark btn-sidebar mb-4" id="btn-panel"
        data-type="menu-btn"
        style="animation-delay: .1s;"
        href="/admin/main">
            <i class="fa-solid fa-house fa-2x text-white"></i>
            <small class="mt-1 mb-0">Panel</small>
        </a>
        <a type="button" class="btn btn-dark btn-sidebar mb-4" id="btn-productos" 
        data-type="menu-btn"
        style="animation-delay: .2s;"
        href="/admin/productos">
            <i class="fa-solid fa-spray-can-sparkles fa-2x text-white"></i>
            <small class="mt-1 mb-0">Productos</small>
        </a>
        <a type="button" class="btn btn-dark btn-sidebar mb-4" id="btn-pedidos" 
        data-type="menu-btn"
        style="animation-delay: .3s;"
        href="/admin/pedidos">
            <i class="fa-solid fa-basket-shopping fa-2x text-white"></i>
            <small class="mt-1 mb-0">Pedidos</small>
        </a>
        <a type="button" class="btn btn-dark btn-sidebar mb-4" id="btn-clientes" 
        data-type="menu-btn" 
        style="animation-delay: .4s;" 
        href="/admin/clientes">
            <i class="fa-solid fa-user fa-2x text-white"></i>
            <small class="mt-1 mb-0">Clientes</small>
        </a>
        <a type="button" class="btn btn-dark btn-sidebar mb-4" id="btn-reportes" 
        data-type="menu-btn" 
        style="animation-delay: .4s;" 
        href="/admin/reportes">
            <i class="fa-solid fa-chart-simple fa-2x text-white"></i>
            <small class="mt-1 mb-0">Reportes</small>
        </a>

        <div class="mt-auto mb-3">
            <button type="button" class="btn btn-transparent" id="logoutbutton">
                <i class="fa-solid fa-arrow-right-from-bracket text-light"></i> <span class="text-light">Salir</span>
            </button>
        </div>
    </div>
</div>
<script>
    var windowButton = "{{ menuItem }}";
    $(`#btn-${windowButton}`).addClass("active");

    $(document).ready(function(){
        $('[data-type="menu-btn"]').each(function(){
            let btnid = $(this).attr('id');
            animateCSS(`#${btnid}`, 'fadeInLeft');
        });
        $("#logoutbutton").on('click', function(){
            localStorage.removeItem('token');
            localStorage.removeItem('user');
            function delete_cookie(name) {
                document.cookie = name +'=; Path=/; Expires=Thu, 01 Jan 1970 00:00:01 GMT;';
            }
            delete_cookie('token');
            delete_cookie('user');
            window.location.href = "/admin/logout";
        });
    });

    
</script>