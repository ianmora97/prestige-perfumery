<div class="mt-4 mb-2">
    <div class="bg-white rounded-15 shadow-custom py-3 mx-3 animate__animated animate__fadeIn mb-5">
        <div class="row mx-0 px-3 mb-3">
            <div class="col px-1">
                <div class="d-flex justify-content-start align-items-center">
                    <div class="form-icon" style="width: 300px;">
                        <i class="fa-solid fa-search"></i>
                        <input class="form-control" type="text" placeholder="Buscar..." 
                        id="barraBuscar" aria-label="Buscar un producto">
                    </div>
                </div>
            </div>
            <div class="col-md-4 px-1 d-md-flex d-none justify-content-md-end align-items-center mt-3 mt-md-0" id="button-group">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#agregarClienteModal"><i class="fa-solid fa-plus"></i> Agregar Cliente</button>
            </div>
        </div>
        <div class="row mx-0 px-3">
            <div class="col px-1 d-flex justify-content-start align-items-center">

            </div>
            <div class="col-md-6 px-1 d-md-flex justify-content-end align-items-center d-none">
                <small class="text-muted" id="info"></small>
                <div class="ms-4" id="length"></div>
            </div>
        </div>
        <div class="table-container mt-2" id="table-container">
            <table class="table table-custom table-borderless table-striped table-responsive " id="table">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col" data-priority="1">Nombre</th>
                        <th scope="col" data-priority="4">Cédula</th>
                        <th scope="col" data-priority="5">Número</th>
                        <th scope="col" data-priority="2">Editar</th>
                    </tr>
                </thead>
                <tbody id="tbody"></tbody>
            </table>
        </div>
        <div class="d-flex justify-content-end px-3 pagination-tables" id="pagination">
            
        </div>
    </div>
</div>

<div class="modal fade" id="agregarClienteModal" tabindex="-1" aria-labelledby="agregarClienteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xxl">
        <div class="modal-content">
            <div class="modal-header text-bg-dark pb-2">
                <p class="modal-title" id="agregarClienteModalLabel"><i class="fa-solid fa-user text-secondary"></i> Agregar Cliente</p>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row mx-0">
                    <div class="col-md-6">
                        <div class="mb-2">
                            <label for="add-nombre" class="form-label fw-bold">Nombre</label>
                            <input type="text" class="form-control" id="add-nombre" placeholder="Nombre...">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-2">
                            <label for="add-cedula" class="form-label fw-bold">Cédula</label>
                            <input type="text" class="form-control" id="add-cedula" placeholder="Cédula...">
                        </div>
                    </div>
                </div>
                <div class="row mx-0">
                    <div class="col-md-6">
                        <div class="mb-2">
                            <label for="add-numero" class="form-label fw-bold">Número <span class="text-muted small">(Opcional)</span></label>
                            <input type="text" class="form-control" id="add-numero" placeholder="Número de telefono...">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-2">
                            <label for="add-direccion" class="form-label fw-bold">Direccion <span class="text-muted small">(Opcional)</span></label>
                            <input type="text" class="form-control" id="add-direccion" placeholder="Direccion de Casa...">
                        </div>
                    </div>
                </div>
                <div class="row mx-0">
                    <div class="col-md">
                        <div class="mb-2">
                            <label for="add-email" class="form-label fw-bold">Correo <span class="text-muted small">(Opcional)</span></label>
                            <input type="text" class="form-control" id="add-email" placeholder="Correo...">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white btn-lg" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="agregarCliente()">Agregar</button>
            </div>
        </div>
    </div>
</div>


