<div class="modal fade" id="agregarPedidoModal" tabindex="-1" aria-labelledby="agregarPedidoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xxl">
        <div class="modal-content">
            <div class="modal-header text-bg-dark">
                <p class="modal-title" id="agregarPedidoModalLabel"><i class="fa-solid fa-plus text-secondary"></i> Agregar Pedido</p>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row mx-0">
                    <div class="col-md-3">
                        <div class="mb-2">
                            <label for="add-client" class="form-label fw-bold">Cliente</label>
                            <select id="add-client" placeholder="Seleccione un Cliente..."></select>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="mb-2">
                            <label for="add-productos" class="form-label fw-bold">Productos</label>
                            <select id="add-productos" multiple placeholder="Seleccione los productos..."></select>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="row mx-0 g-0">
                    <div class="col-md-7">
                        <h5 class="fw-bold">Producto Seleccionado</h5>
                    </div>
                    <div class="d-flex justify-content-start" style="width: 360px; margin-right: 25px;">
                        <h5 class="fw-bold" style="width: 330px;">Precio</h5>
                    </div>
                    <div class="col-md">
                        <h5 class="fw-bold">Cantidad</h5>
                    </div>
                </div>
                <ul class="list-group" id="products-list"></ul>
                <hr>
                <div class="row mx-0">
                    <div class="col-md-6">
                        <label for="add-notas" class="form-label fw-bold">Notas de la orden <small class="text-muted">(Opcional)</small></label>
                        <textarea class="form-control bg-white" id="add-notas" rows="3"></textarea>
                    </div>
                    <div class="col-md-6">
                        <label for="add-metodoPago" class="form-label fw-bold">Método de pago</label>
                        <select id="add-metodoPago" class="form-select bg-white" placeholder="Seleccione un método de pago...">
                            <option value="Efectivo">Efectivo</option>
                            <option value="Tarjeta">Tarjeta</option>
                            <option value="SINPE">Sinpe</option>
                            <option value="Transferencia">Transferencia</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white btn-lg" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="agregarPedido()">Agregar</button>
            </div>
        </div>
    </div>
</div>


